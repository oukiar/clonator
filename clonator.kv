
#:import ScrollBox devslib.scrollbox

<ImageName>:
    title: 'Nombre de imagen'
    size_hint: (None, None)
    size: (400,150)

    txt_imagename:txt_imagename
    btn_aceptar:btn_aceptar
    btn_cancelar:btn_cancelar

    BoxLayout:
        orientation: "vertical"
        
        TextInput:
            id: txt_imagename
            
        BoxLayout:
        
            Button:
                id: btn_cancelar
                text: "Cancelar"
                on_release: root.dismiss()
        
            Button:
                id: btn_aceptar
                text: "Aceptar"
                on_release: app.root.set_image_name()

<ImageFiles>:
    title: "Archivos de imagen"
    items:items
    size_hint: (None, None)
    size: (640,600)
    BoxLayout:  
        orientation: "vertical"
        ScrollBox:
            orientation: "vertical"
            id: items
            
        BoxLayout: 
            size_hint_y: None
            height: 60
            Button:
                text: "Cancelar"
                on_release: root.dismiss()
            Button:
                text: "Aceptar"
            
            
<Clonator>:
    origen:origen
    destino:destino
    
    model_src:model_src
    serial_src:serial_src
    
    model_dst:model_dst
    serial_dst:serial_dst
    
    inicio:inicio
    lb_info:lb_info
    
    apagar:apagar
    
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            padding: 20
            spacing: 30
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Origen"
                    font_size: 32
                    
                Spinner:
                    id: origen
                    size_hint_y: None
                    height: 50
                    on_text: root.set_origen(args[1])
                
                BoxLayout:
                    orientation: "vertical"
                    
                    padding: 20
                    
                    Label:
                        id: model_src
                        text: "Model:"
                        text_size: self.size
                        halign: 'left'
                        valign: 'middle'
                        
                    Label:
                        id: serial_src
                        text: "S/N:"
                        text_size: self.size
                        halign: 'left'
                        valign: 'middle'
                    
                    
            BoxLayout:
                orientation: "vertical"
                Label:
                    text: "Destino"
                    font_size: 32
                    
                Spinner:
                    id: destino
                    size_hint_y: None
                    height: 50
                    on_text: root.set_destino(args[1])
                
                BoxLayout:
                    orientation: "vertical"
                    
                    padding: 20
                    
                    Label:
                        id: model_dst
                        text: "Model:"
                        text_size: self.size
                        halign: 'left'
                        valign: 'middle'
                        
                    Label:
                        id: serial_dst
                        text: "S/N:"
                        text_size: self.size
                        halign: 'left'
                        valign: 'middle'
            
        AnchorLayout:
            size_hint_y: None
            height: 40
            BoxLayout:
                size_hint_x: None
                width: 350
        
                Label: 
                    text: "Continuar clonacion"
                    
                TextInput:
                    id: inicio
                    text: "0"
        
        AnchorLayout:
            size_hint_y: None
            height: 60
            BoxLayout:
                size_hint_x: None
                width: 350
                orientation: "vertical"
                BoxLayout:
                    CheckBox:
                        active: True
                        size_hint_x: None
                        id: apagar
                    Label:
                        text: "Apagar equipo al terminar"
                        
                BoxLayout:
                    CheckBox:
                        active: True
                        size_hint_x: None
                        id: apagar
                    Label:
                        text: "Regenerar sectores (4 pasadas)"
            
                    
        Label:
            id: lb_info
            size_hint_y: None
            height: 60
            text: "Listo para empezar clonacion"
            
                    
        ProgressBar:
            size_hint_y: None
            height: 40
            
        Button:
            size_hint_y: None
            text: "Iniciar"
            on_release: root.iniciar_clonacion()
            
            
